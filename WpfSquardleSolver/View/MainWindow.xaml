<Window x:Class="WpfSquaredleSolver.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:WpfSquaredleSolver.ViewModel"
        xmlns:converters="clr-namespace:WpfSquaredleSolver.ValueConverters"
        xmlns:view="clr-namespace:WpfSquaredleSolver.View" 
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#ecf0f1">
    <Window.Resources>
        <converters:IsSolverRunningColorConverter x:Key="IsSolverRunningColorConverter"/>
        <converters:IsSolverRunningTextConverter x:Key="IsSolverRunningTextConverter"/>
    </Window.Resources>
    <Grid>
        <TextBox 
            x:Name="InputField"
            HorizontalAlignment="Left" 
            PreviewKeyDown="TextBox_PreviewKeyDown"
            TextAlignment="Center"
            VerticalContentAlignment="Center"
            CharacterCasing="Upper"
            VerticalScrollBarVisibility="Auto"
            Margin="148,56,0,0" 
            AcceptsReturn="True" 
            TextWrapping="NoWrap"
            d:Text="HELL&#10;OWOR&#10;LDFO&#10;OBAR"
            Text="{Binding PuzzleAsText, UpdateSourceTrigger=PropertyChanged}"
            VerticalAlignment="Top" 
            Width="93" 
            Height="110" 
            FontFamily="Courier New" 
            FontSize="20" Background="#bdc3c7">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="2"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <Border
            Margin="370,36,40,39"
            BorderThickness="3"
            BorderBrush="Black"
            CornerRadius="5">
            <ListView
                x:Name="ResultsListView"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                ItemsSource="{Binding CharacterGridViewModels}"
                HorizontalAlignment="Stretch"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel
                            Orientation="Horizontal"
                            Width="{Binding ElementName=ResultsListView, Path=DataContext.WrapPanelWidth}"
                            VirtualizingPanel.IsVirtualizing="True"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <view:CharacterGrid
                                    Grid.Row="0"
                                    Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                                    Height="80"
                                    HorizontalAlignment="Center"/>
                            <TextBlock
                                Text="{Binding AnswerAsString}"
                                d:Text="Answer"
                                Grid.Row="1"
                                HorizontalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListView>
        </Border>
        
        <Button x:Name="ToggleSolverButton"
                Content="{Binding IsSolverRunning, Converter={StaticResource IsSolverRunningTextConverter}}"
                d:Content="PlaceHolder"
                Command="{Binding ToggleSolverOnOff}"
                d:Background="Green"
                Background="{Binding IsSolverRunning, Converter={StaticResource IsSolverRunningColorConverter}}"
                HorizontalAlignment="Left"
                Margin="128,184,0,0"
                VerticalAlignment="Top"
                Width="133"/>
    </Grid>
</Window>
